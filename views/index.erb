			<%else%>
				<input type="checkbox" name="focal_length" value=true>焦距 
			<%end%>
			<% if @setting["ISO"]%>
				<input type="checkbox" name="ISO" value=true checked>ISO 
			<%else%>
				<input type="checkbox" name="ISO" value=true>ISO 
			<%end%>
			<% if @setting["GPS"]%>
				<input type="checkbox" name="GPS" value=true checked>GPS</br>
			<%else%>
				<input type="checkbox" name="GPS" value=true>GPS</br>
